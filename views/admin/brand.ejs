  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Form validation for Add Brand
      const addBrandForm = document.getElementById('addBrandForm');
      if (addBrandForm) {
        addBrandForm.addEventListener('submit', function(event) {
          let isValid = true;
          
          // Brand name validation
          const brandName = document.getElementById('brandName');
          const brandNameError = document.getElementById('brandNameError');
          if (!brandName.value.trim()) {
            brandNameError.textContent = 'Brand name is required';
            brandName.classList.add('is-invalid');
            isValid = false;
          } else if (brandName.value.trim().length < 2) {
            brandNameError.textContent = 'Brand name must be at least 2 characters';
            brandName.classList.add('is-invalid');
            isValid = false;
          } else if (brandName.value.trim().length > 50) {
            brandNameError.textContent = 'Brand name cannot exceed 50 characters';
            brandName.classList.add('is-invalid');
            isValid = false;
          } else {
            brandNameError.textContent = '';
            brandName.classList.remove('is-invalid');
          }
          
          // Description validation
          const brandDescription = document.getElementById('brandDescription');
          const brandDescriptionError = document.getElementById('brandDescriptionError');
          if (brandDescription.value.trim().length > 500) {
            brandDescriptionError.textContent = 'Description cannot exceed 500 characters';
            brandDescription.classList.add('is-invalid');
            isValid = false;
          } else {
            brandDescriptionError.textContent = '';
            brandDescription.classList.remove('is-invalid');
          }
          
          // Logo validation
          const brandLogo = document.getElementById('brandLogo');
          const brandLogoError = document.getElementById('brandLogoError');
          if (!brandLogo.files || !brandLogo.files[0]) {
            brandLogoError.textContent = 'Brand logo is required';
            brandLogo.classList.add('is-invalid');
            isValid = false;
          } else {
            const file = brandLogo.files[0];
            const fileType = file.type;
            const validImageTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/svg+xml'];
            
            if (!validImageTypes.includes(fileType)) {
              brandLogoError.textContent = 'Please upload a valid image file (JPEG, PNG, GIF, SVG)';
              brandLogo.classList.add('is-invalid');
              isValid = false;
            } else if (file.size > 2 * 1024 * 1024) { // 2MB
              brandLogoError.textContent = 'Image size should not exceed 2MB';
              brandLogo.classList.add('is-invalid');
              isValid = false;
            } else {
              brandLogoError.textContent = '';
              brandLogo.classList.remove('is-invalid');
            }
          }
          
          if (!isValid) {
            event.preventDefault();
          }
        });
      }
      
      // Form validation for Edit Brand
      const editBrandForm = document.getElementById('editBrandForm');
      if (editBrandForm) {
        editBrandForm.addEventListener('submit', function(event) {
          let isValid = true;
          
          // Brand name validation
          const editBrandName = document.getElementById('editBrandName');
          const editBrandNameError = document.getElementById('editBrandNameError');
          if (!editBrandName.value.trim()) {
            editBrandNameError.textContent = 'Brand name is required';
            editBrandName.classList.add('is-invalid');
            isValid = false;
          } else if (editBrandName.value.trim().length < 2) {
            editBrandNameError.textContent = 'Brand name must be at least 2 characters';
            editBrandName.classList.add('is-invalid');
            isValid = false;
          } else if (editBrandName.value.trim().length > 50) {
            editBrandNameError.textContent = 'Brand name cannot exceed 50 characters';
            editBrandName.classList.add('is-invalid');
            isValid = false;
          } else {
            editBrandNameError.textContent = '';
            editBrandName.classList.remove('is-invalid');
          }
          
          // Description validation
          const editBrandDescription = document.getElementById('editBrandDescription');
          const editBrandDescriptionError = document.getElementById('editBrandDescriptionError');
          if (editBrandDescription.value.trim().length > 500) {
            editBrandDescriptionError.textContent = 'Description cannot exceed 500 characters';
            editBrandDescription.classList.add('is-invalid');
            isValid = false;
          } else {
            editBrandDescriptionError.textContent = '';
            editBrandDescription.classList.remove('is-invalid');
          }
          
          // Logo validation (only if a new file is selected)
          const editBrandLogo = document.getElementById('editBrandLogo');
          const editBrandLogoError = document.getElementById('editBrandLogoError');
          if (editBrandLogo.files && editBrandLogo.files[0]) {
            const file = editBrandLogo.files[0];
            const fileType = file.type;
            const validImageTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/svg+xml'];
            
            if (!validImageTypes.includes(fileType)) {
              editBrandLogoError.textContent = 'Please upload a valid image file (JPEG, PNG, GIF, SVG)';
              editBrandLogo.classList.add('is-invalid');
              isValid = false;
            } else if (file.size > 2 * 1024 * 1024) { // 2MB
              editBrandLogoError.textContent = 'Image size should not exceed 2MB';
              editBrandLogo.classList.add('is-invalid');
              isValid = false;
            } else {
              editBrandLogoError.textContent = '';
              editBrandLogo.classList.remove('is-invalid');
            }
          }
          
          if (!isValid) {
            event.preventDefault();
          }
        });
      }
      
      // Image preview for Add Brand
      const brandLogo = document.getElementById('brandLogo');
      const logoPreview = document.getElementById('logoPreview');
      const logoPreviewContainer = document.getElementById('logoPreviewContainer');
      
      if (brandLogo) {
        brandLogo.addEventListener('change', function() {
          if (this.files && this.files[0]) {
            const reader = new FileReader();
            
            reader.onload = function(e) {
              logoPreview.src = e.target.result;
              logoPreviewContainer.style.display = 'block';
            }
            
            reader.readAsDataURL(this.files[0]);
          } else {
            logoPreviewContainer.style.display = 'none';
          }
        });
      }
      
      // Image preview for Edit Brand
      const editBrandLogo = document.getElementById('editBrandLogo');
      const editLogoPreview = document.getElementById('editLogoPreview');
      
      if (editBrandLogo) {
        editBrandLogo.addEventListener('change', function() {
          if (this.files && this.files[0]) {
            const reader = new FileReader();
            
            reader.onload = function(e) {
              editLogoPreview.src = e.target.result;
            }
            
            reader.readAsDataURL(this.files[0]);
          }
        });
      }
      
      // Populate Edit Brand Modal
      const editBrandButtons = document.querySelectorAll('.edit-brand-btn');
      editBrandButtons.forEach(button => {
        button.addEventListener('click', function() {
          const id = this.getAttribute('data-id');
          const name = this.getAttribute('data-name');
          const description = this.getAttribute('data-description');
          const logo = this.getAttribute('data-logo');
          const isActive = this.getAttribute('data-active') === 'true';
          
          document.getElementById('editBrandId').value = id;
          document.getElementById('editBrandName').value = name;
          document.getElementById('editBrandDescription').value = description;
          document.getElementById('editLogoPreview').src = logo;
          document.getElementById('editBrandActive').checked = isActive;
        });
      });
      
      // Populate Delete Brand Modal
      const deleteBrandButtons = document.querySelectorAll('.delete-brand-btn');
      deleteBrandButtons.forEach(button => {
        button.addEventListener('click', function() {
          const id = this.getAttribute('data-id');
          const name = this.getAttribute('data-name');
          const productCount = parseInt(this.getAttribute('data-product-count'));
          
          document.getElementById('deleteBrandId').value = id;
          document.getElementById('deleteBrandName').textContent = name;
          
          const deleteWarning = document.getElementById('deleteWarning');
          const deleteProductCount = document.getElementById('deleteProductCount');
          
          if (productCount > 0) {
            deleteProductCount.textContent = productCount;
