    <script>
        // Toggle payment method fields based on selection
        document.getElementById('paymentType').addEventListener('change', function() {
            const cardFields = document.getElementById('cardFields');
            const paypalFields = document.getElementById('paypalFields');
            const bankFields = document.getElementById('bankFields');
            
            // Hide all fields first
            cardFields.style.display = 'none';
            paypalFields.style.display = 'none';
            bankFields.style.display = 'none';
            
            // Show fields based on selection
            if (this.value === 'credit_card' || this.value === 'debit_card') {
                cardFields.style.display = 'block';
            } else if (this.value === 'paypal') {
                paypalFields.style.display = 'block';
            } else if (this.value === 'bank') {
                bankFields.style.display = 'block';
            }
        });
        
        // Add money function
        function addMoney() {
            const amount = document.getElementById('addAmount').value;
            const method = document.getElementById('paymentMethod').value;
            
            if (!amount || !method) {
                alert('Please fill in all required fields.');
                return;
            }
            
            // Simulate adding money
            alert(`$${amount} has been added to your wallet successfully!`);
            
            // Close modal and refresh page
            const modal = bootstrap.Modal.getInstance(document.getElementById('addMoneyModal'));
            modal.hide();
            
            // In a real application, you would make an API call here
            // and then refresh the page or update the UI
            setTimeout(() => {
                window.location.reload();
            }, 500);
        }
        
        // Withdraw money function
        function withdrawMoney() {
            const amount = document.getElementById('withdrawAmount').value;
            const method = document.getElementById('withdrawMethod').value;
            
            if (!amount || !method) {
                alert('Please fill in all required fields.');
                return;
            }
            
            if (parseFloat(amount) > 250) {
                alert('Withdrawal amount cannot exceed your available balance.');
                return;
            }
            
            // Simulate withdrawal
            alert(`$${amount} withdrawal has been initiated. It will be processed within 1-3 business days.`);
            
            // Close modal and refresh page
            const modal = bootstrap.Modal.getInstance(document.getElementById('withdrawMoneyModal'));
            modal.hide();
            
            // In a real application, you would make an API call here
            // and then refresh the page or update the UI
            setTimeout(() => {
                window.location.reload();
            }, 500);
        }
        
        // Add payment method function
        function addPaymentMethod() {
            const paymentType = document.getElementById('paymentType').value;
            
            if (!paymentType) {
                alert('Please select a payment type.');
                return;
            }
            
            // Validate fields based on payment type
            if (paymentType === 'credit_card' || paymentType === 'debit_card') {
                const cardNumber = document.getElementById('cardNumber').value;
                const expiryDate = document.getElementById('expiryDate').value;
                const cvv = document.getElementById('cvv').value;
                const nameOnCard = document.getElementById('nameOnCard').value;
                
                if (!cardNumber || !expiryDate || !cvv || !nameOnCard) {
                    alert('Please fill in all card details.');
                    return;
                }
            } else if (paymentType === 'paypal') {
                const paypalEmail = document.getElementById('paypalEmail').value;
                
                if (!paypalEmail) {
                    alert('Please enter your PayPal email.');
                    return;
                }
            } else if (paymentType === 'bank') {
                const accountName = document.getElementById('accountName').value;
                const accountNumber = document.getElementById('accountNumber').value;
