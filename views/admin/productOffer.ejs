        <section class="content-main">
            
            
            
            <div class="card mb-4">
                <header class="card-header">
                    <h4 class="card-title">Product Offers</h4>
                    <div class="row align-items-center">
                        <div class="col-md-2 col-6">
                            <a class="btn btn-md rounded font-sm" href="getaddproduct">Add Offer</a>
                        </div>
                    </div>
                </header>
                <div class="card-body">
                    <div class="table-responsive">
                        <div class="table-responsive">
                            <table class="table align-middle table-nowrap mb-0">
                                <thead class="table-light">
                                    <tr>
                                        
                                        <th class="align-middle" scope="col"> Product Name</th>
                                        <th class="align-middle" scope="col">Start Date</th>
                                        <th class="align-middle" scope="col">End date</th>
                                        <th class="align-middle" scope="col">Discount</th>
                                        <th class="align-middle" scope="col">Status</th>
                                        
                                        <th class="align-middle">Action</th>
                                        
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    <% product.forEach(element => { %>                                 
                                    <tr>                                      
                                        <td><a href="" class=""><%= element.name %></a> </td>
                                        <td><%= element.offer.startDate %></td>
                                        <td>
                                            <%= element.offer.endDate %>
                                        </td>
                                        <td>
                                           <%= element.offer.discount %>
                                        </td>
                                        <td>
                                          <% if (new Date(element.offer.startDate)>new Date()) { %>
                                                <span class="badge bg-success">Upcoming</span>
                                                <% } else if (new Date(element.offer.endDate)<new Date()) { %>
                                                 <span class="badge bg-danger">expired</span>
                                                 <% } else if (element.offer.isActive == false) { %>
                                                  <span class="badge bg-warning">Blocked</span>
                                                  <% } else { %>
                                                   <span class="badge bg-success">Active</span>
                                          <% } %>
                                        </td>
                                        <td style="display: flex; gap: 10px; width: 110px;">
                                            <% if (element.offer.isActive) { %>
                                             <button onclick="deleteOffer('<%= element._id %>')" class="btn btn-md rounded font-sm">Block</button>
                                             <% } else { %>
                                              <button onclick="deleteOffer('<%= element._id %>')" class="btn btn-md rounded font-sm">Unblock</button>
                                            <% } %>
                                             <a href="editproductoffer/<%= element._id %>" class="btn btn-md rounded font-sm">edit</a>
                                        </td>
                                    </tr>                                        
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div> 
