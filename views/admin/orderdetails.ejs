    <script>
        function changestatus(orderId) {
            console.log(orderId);
            const selectedStatus = document.getElementById('statusSelect').value;
            let currentStatus = document.getElementById('pdtStatus').value
            let productId = document.getElementById('productId').value;
            console.log(productId,'this si the pdt id');
            
            console.log(selectedStatus,'sdfghjklkjhgfd',currentStatus);
            if (selectedStatus !== currentStatus) {
                Swal.fire({
                    title: 'Are you sure?',
                    text: 'Are you sure you want to change the status!',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonText: 'Yes, change it!',
                    cancelButtonText: 'No, cancel!',
                }).then((result) => {
                    if (result.isConfirmed) {
                        console.log("its hereeeeeeeee");
                        fetch('/admin/orders/update-status', {
                            method: 'post',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                orderId,
                                selectedStatus,
                                productId
                            })
                        })
                            .then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    Swal.fire({
                                        title: 'Status Changed!',
                                        text: 'The status has been successfully changed.',
                                        icon: 'success'
                                    }).then(() => {

                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire({
                                        title: 'Error',
                                        text: 'Failed to change the status.',
                                        icon: 'error'
                                    });
                                }
                            })
                            .catch(error => {
                                console.error('Error:', error);
                                Swal.fire({
                                    title: 'Error',
                                    text: 'An unexpected error occurred.',
                                    icon: 'error'
                                });
                            });
                    }
                });
            } else {
                // Status not changed
                Swal.fire({
                    title: 'Info',
                    text: 'The status is already set to ' + currentStatus + '. No changes made.',
                    icon: 'info'
                });
            }
        }

        function back() {
            window.location.href = 'orderlist'
        }

        function openStatusModal(orderId,pdtId,pdtStatus) {
            console.log(pdtId,'this is the pdt id');
            // let pdtStatus = document.getElementById('pdt-status').innerText
            console.log(pdtStatus,'this is the pdt status')
            document.getElementById('pdtStatus').value = pdtStatus
            document.getElementById('productId').value = pdtId;
            let myModal = new bootstrap.Modal(document.getElementById('orderStatusModal'));
            myModal.show();
        }
        function cancelledMsg(){
            showToast("Cancelled Item Can't Change",'warning')
        }


