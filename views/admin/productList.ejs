            <div class="card mb-4">
                <header class="card-header">
                    <div class="d-flex align-items-center gap-3">
                        <form class="searchform" action="/admin/productList" method="get">
                            <div class="input-group">
                                <input list="search_terms" type="text" name="search" value="<%= search||'' %>" class="form-control" placeholder="Search term">
                                
                                <% if (search) { %>
                                 <a href="/admin/productList"><button class="btn btn-light bg" type="button"> <i class="material-icons md-close"></i></button></a>
                                 <% } else { %>
                                  <button class="btn btn-light bg" type="submit"> <i class="material-icons md-search"></i></button>
                                <% } %>
                            </div>
                        </form>

                        <div class="col-md-3 col-12 me-auto mb-md-0 mb-3">
                           <select class="form-select" name="category" onchange="filterByCategory(this.value)">
                                <option value="">All Categories</option>
                                <% categories.forEach(element => { %>
                                    <option value="<%= element._id %>" <%= category == element._id ? 'selected' : '' %>><%= element.name %></option>
                                <% }) %>
                            </select>
                        </div>
                        <div class="col-md-2 col-6">
                            <a class="menu" href="addProducts"> <i style="font-size: 30px;" class="icon material-icons md-add_box "></i>
                               <span style="font-size: 15px;">Add Product</span>
                            </a>
                        </div>
                    </div>
                </header> <!-- card-header end// -->
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-bg">
                        <tr>
                            <th scope="col">
                            <!-- <input class="form-check-input" type="checkbox" /> -->
                            </th>
                            <th scope="col">Product</th>
                            <th scope="col">MRP (XL)</th>
                            <th scope="col">Sales Price</th>
                            <th scope="col">Offer</th>
                            <th scope="col">Quantity</th>
                            <th scope="col">Listed</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        <% product.forEach((prod) => { %>
                            <tr>
                            <td>
                                <!-- <input class="form-check-input" type="checkbox" /> -->
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="https://res.cloudinary.com/<%= cloudName %>/image/upload/<%= prod.images[0] %>" 
                                        alt="Product-image" 
                                        class="img-thumbnail me-2" 
                                        style="width: 60px; height: 60px; object-fit: cover;">
                                    <div>
                                        <a href="/admin/productDetails/<%= prod._id %>" class="text-decoration-none fw-semibold">
                                        <%= prod.name %>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <div class="d-flex align-items-center">
                                <td style="margin-top: -40px;">
                                    ₹<%= prod.sizes?.small?.Mrp || 0 %>
                                </td>
                                <td>₹<%= Math.round((prod.sizes.small.Mrp - (prod.sizes?.small?.Mrp * prod.sizes?.small?.amount) / 100))  || 0 %></td>
                                <td><%= prod.sizes.small.amount %>%</td>
                                <td><%= prod.sizes?.small?.quantity || 0 %></td>
                                <td>
                                    <% if (prod.isListed) { %>
                                        <span class="badge bg-success">Listed</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">Unlisted</span>
                                    <% } %>
                                </td>
                                <td>
                                    <a href="/admin/editProduct/<%= prod._id %>" class="btn btn-sm "><i class="fas fa-edit text-primary fs-5"></i></a>
                                    <a href="/admin/deleteProduct?id=<%= prod._id %>" class="btn btn-sm" onclick="openDeleteModal('<%= prod._id %>'); return false"><i class="fas fa-trash-alt text-danger fs-5 "></i>
                                    </a>
                                    <% if (prod.isListed) { %>
                                     <button class="btn btn-sm " onclick="blockProd('<%=prod._id%>')"><i class="fas fa-eye-slash text-warning fs-5"></i> </button>
                                     <% } else { %>
                                       <button class="btn btn-sm "onclick="unBlockProd('<%=prod._id%>')"><i class="fas fa-eye text-success fs-5"></i> </button>
                                    <% } %>
                                   
                                </td>
                            </div>
                            
                            </tr>
                        <% }) %>
                        </tbody>
