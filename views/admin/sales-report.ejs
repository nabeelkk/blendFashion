            }
        }

        function pdf() {
            const element = document.getElementById('pdf'); // The table
        const summary = document.getElementById('summary');

        // Create a temporary container to export both
        const exportContent = document.createElement("div");
        exportContent.appendChild(element.cloneNode(true));
        exportContent.appendChild(summary.cloneNode(true));

        html2pdf().from(exportContent).set({
            margin: 0.5,
            filename: 'sales_report.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2 },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
        }).save();
        }

        function excel() {
            /* Retrieve table data */
