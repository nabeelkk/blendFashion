        function saveAsExcelFile(buffer, fileName) {
            var data = new Blob([buffer], { type: 'application/octet-stream' });
            var url = window.URL.createObjectURL(data);
            var link = document.createElement('a');
            link.href = url;
            link.download = fileName;
            link.click();
            setTimeout(function () {
                window.URL.revokeObjectURL(url);
            }, 100);
        }
        function calculateSummary() {
        const rows = document.querySelectorAll('#pdf tbody tr');
        let totalOrders = 0, totalSales = 0, totalDiscount = 0, totalCoupon = 0, totalPaid = 0;

        rows.forEach(row => {
            totalOrders++;
            const sales = parseFloat(row.cells[4].innerText) || 0;
            const discount = parseFloat(row.cells[5].innerText) || 0;
            const coupon = parseFloat(row.cells[6].innerText) || 0;
            const paid = parseFloat(row.cells[7].innerText) || 0;

            totalSales += sales;
            totalDiscount += discount;
            totalCoupon += coupon;
            totalPaid += paid;
        });

        document.getElementById('totalOrders').innerText = totalOrders;
        document.getElementById('totalSales').innerText = totalSales.toFixed(2);
        document.getElementById('totalDiscount').innerText = totalDiscount.toFixed(2);
        document.getElementById('totalCoupon').innerText = totalCoupon.toFixed(2);
        document.getElementById('totalPaid').innerText = totalPaid.toFixed(2);
    }

