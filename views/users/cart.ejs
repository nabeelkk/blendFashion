<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart | The Style</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/style1.css">
    
</head>
<body>
    <!-- Header -->
    <%- include('../partials/navbar') %>
    <!-- Cart Content -->
    <section class="cart-content py-5">
        <div class="container">
            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8 mb-4 mb-lg-0">
                    
                        <% if (error) { %>
                            <div class="alert alert-error flash-error" style="color: red;" id="errorFlash">
                                <%= error %>
                            </div>
                        <% } %>
                                
                        
                    
                    <div class="cart-items">
                        <div class="table-responsive">
                            <table class="table table-borderless">
                                <thead>
                                    <tr>
                                        <th scope="col" colspan="2">Product</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Cart Item 1 -->
                                    <% cart.products.forEach(element => { %>
                                        <tr class="cart-item">
                                            <td class="product-thumbnail">
                                                <a href="/productDetails/<%= element.productId._id %>">
                                                    <img src="https://res.cloudinary.com/<%= cloudName %>/image/upload/<%= element.productId.images[0] %> " alt="Premium Cotton Shirt" class="img-fluid" width="80">
                                                </a>
                                            </td>
                                            <td class="product-name">
                                                <a href="/productDetails/<%= element.productId._id %>" class="text-dark"><%= element.productId.name %></a>
                                                <div class="product-meta mt-1">
                                                    
                                                        <span class="text-muted">Size: </span><%=element.size %>
                                                    <!-- <span class="text-muted ms-3">Color: </span>White -->
                                                </div>
                                                <span class="">₹</span><span class="current-price " ><%= element.price %></span><span>.00</span>
                                                <span class="original-price text-decoration-line-through text-muted ms-2">₹<%= element.productId.sizes.small.Mrp %>.00</span>
                                            </td>
                                            
                                            <td class="product-price">₹<%= element.productId.sizes.small.Mrp %>.00</td>
                                            
                                            <td class="product-quantity">
                                                <div class="quantity-selector d-flex align-items-center">
                                                    <button id="quantityDecreamentBtn" class="btn btn-sm btn-outline-secondary quantity-btn" onclick="changeQuantity('<%= element.productId._id %>', '<%= element.size %>', -1, this)">-</button>
                                                    <input type="number" class="form-control form-control-sm text-center mx-2 quantity-input" value="<%= element.quantity %>" disabled >
                                                    <button id="quantityIncremnetBtn" class="btn btn-sm btn-outline-secondary quantity-btn" onclick="changeQuantity('<%= element.productId._id %>', '<%= element.size %>', 1, this)">+</button>
                                                    
                                                </div>
                                                <p id="errmsg" style="color: brown; font-size: 12px;" class="mt-2 mb-2"></p>
                                            </td>
                                            <td class="product-subtotal fw-bold">₹<%= element.productId.sizes.small.Mrp * element.quantity %>.00</td>
                                            <input type="hidden" value="<%= cartCount %>" id="cartCount">
                                            <td class="product-remove">
                                                <button class="btn btn-link text-danger p-0" onclick="removeFromCart('<%= element.productId._id%>','<%= element.size%>')">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    
                    <div class="cart-actions d-flex justify-content-between mt-4">
                        <div class="continue-shopping">
                            <a href="product" class="btn btn-outline-dark">
                                <i class="fas fa-arrow-left me-2"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
                
                <!-- Cart Summary -->
                <div class="col-lg-4">
                    <div class="cart-summary p-4 bg-light">
                        <h3 class="summary-title mb-4">Cart Summary</h3>
                        
                        <!-- Coupon Code -->
                        <div class="coupon-code mb-4">
                            <label for="couponCode" class="form-label">Coupon Code</label>
                            <div class="input-group">
                                <input type="text" class="form-control" id="couponCode" placeholder="Enter coupon code">
                                <button class="btn btn-dark" type="button" onclick="applyCoupon()">Apply</button>
                            </div>
                        </div>
                        
                        <!-- Cart Totals -->
                        
                            <div class="cart-totals">
                                
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Subtotal</span>
                                        
                                        <span class="fw-bold" id="cart-subtotal">₹ <%= totalMRP %>.00</span>
                                        
                                    </div>
                              
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Shipping</span>
                                    <span class="fw-bold" id="cart-shipping">₹0.00</span>
                                </div>
                                <% if (appliedOffer>10) { %>
                                 <!-- <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Special Offer</span>
                                   <span class="fw-bold" id="cart-discount">₹ <%= appliedOffer %>.00</span>
                                </div> -->
                                <% } %>
                                <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Discount</span>
                                    <span class="fw-bold" id="cart-discount">₹ <%= discount %>.00</span>
                                </div>
                                <% if (coupon) { %>
                                 <div class="d-flex justify-content-between mb-2 text-success">
                                    <span>Coupon Applied</span>
                                    <span class="fw-bold" id="cart-discount">₹ <%= coupon %>.00</span>
                                </div>
                                <% } %>
                                <hr>
                                <div class="d-flex justify-content-between mb-4">
                                    <span class="fs-5">Total</span>
                                    
                                    <span class="fs-5 fw-bold" id="cart-total">₹ <%= cartTotal %></span>
                                    
                                </div>
                                <input type="hidden" id="totalAmount" value="<%= cartTotal %>">
                                
                                <div class="checkout-button">
                                    
                                    <a href="checkout" class="btn btn-dark w-100 py-3">
                                        Proceed to Checkout <i class="fas fa-arrow-right ms-2"></i>
                                    </a>
                                
                                </div>
                                
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- You May Also Like -->
    <section class="you-may-like py-5 bg-light">
        <div class="container">
            <h2 class="section-title text-center mb-5">You May Also Like</h2>
            <div class="row">
                <!-- Product 1 -->
                <div class="col-6 col-md-3 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="/uploads/1744008853154-970959823.jpg" alt="Navy Blue T-Shirt" class="img-fluid">
                            <div class="product-overlay">
                                <a href="productDetails" class="btn btn-sm btn-dark">Quick View</a>
                            </div>
                        </div>
                        <div class="product-info pt-3">
                            <h5 class="product-title">Navy Blue T-Shirt</h5>
                            <p class="product-price">$59.00</p>
                        </div>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="col-6 col-md-3 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="/uploads/1744008853153-911909079.jpg" alt="Slim Fit Chino Pants" class="img-fluid">
                            <div class="product-overlay">
                                <a href="productDetails" class="btn btn-sm btn-dark">Quick View</a>
                            </div>
                        </div>
                        <div class="product-info pt-3">
                            <h5 class="product-title">Slim Fit Chino Pants</h5>
                            <p class="product-price">$79.00</p>
                        </div>
                    </div>
                </div>
                <!-- Product 3 -->
                <div class="col-6 col-md-3 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="/uploads/1744008623886-30759333.jpg" alt="Wool Blend Coat" class="img-fluid">
                            <div class="product-overlay">
                                <a href="productDetails" class="btn btn-sm btn-dark">Quick View</a>
                            </div>
                        </div>
                        <div class="product-info pt-3">
                            <h5 class="product-title">Wool Blend Coat</h5>
                            <p class="product-price">$249.00</p>
                        </div>
                    </div>
                </div>
                <!-- Product 4 -->
                <div class="col-6 col-md-3 mb-4">
                    <div class="product-card">
                        <div class="product-image">
                            <img src="/uploads/1744009008287-868456191.jpg" alt="Slim Fit Denim Jeans" class="img-fluid">
                            <div class="product-overlay">
                                <a href="productDetails" class="btn btn-sm btn-dark">Quick View</a>
                            </div>
                        </div>
                        <div class="product-info pt-3">
                            <h5 class="product-title">Slim Fit Denim Jeans</h5>
                            <p class="product-price">$89.00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="js/script.js"></script>
    <script>
        async function  changeQuantity(productId,size,change,btn){
            const input = btn.parentElement.querySelector('.quantity-input');
            let currentQty = parseInt(input.value);
            
            let newQty = currentQty + change
            if(newQty<1) return;

            try {
                const response = await fetch('/cart/update-quantity',{
                    method:'post',
                    headers:{'Content-type':"application/json"},
                    body:JSON.stringify({productId,size,quantity:newQty})
                })
                const data = await response.json()
                if(data.success){
                    input.value = newQty
                    window.location.reload()
                }
                if(data.message ){
                    let errmsg = document.getElementById('errmsg')
                    showToast(data.message ||'', 'error')
                }else{
                    errmsg.innerText = ''
                }
            } catch (error) {
                console.error(error);
                showToast("Something went wrong");
            } finally {
                btn.disabled = false;
                btn.innerText = change > 0 ? '+' : '-';
            }
            
        }
        function removeFromCart(productId, size) {
            
            fetch(`/cart/remove/${productId}/${size}`, {
                
            method: 'DELETE'
            })
            .then(res => res.json())
            .then(data => {
            if (data.success) {
                setTimeout(() => window.location.reload(), 2000); 
                showToast("Removed from cart", "success");
            } else {
                showToast(data.message || "Failed to remove", "error");
            }
            })
            .catch(err => {
            showToast("Error removing item", "error");
            });
        }
        // Apply Coupon
        function applyCoupon() {
            const couponCode = document.getElementById('couponCode').value.trim().toUpperCase();
            const totalprice = document.getElementById('totalAmount').value
            if(couponCode == ''){
                return showToast("Plaese Type Valid Coupon code")
            }
            fetch('/applycoupon',{
                method:"post",
                headers:{"Content-type":"application/json"},
                body:JSON.stringify({couponCode,totalprice})
            })
            .then((response)=>response.json())
            .then((data)=>{
                if(data.success){
                    showToast(data.message||'','success')
                    
                    setTimeout(()=>{
                        window.location.reload()
                    },2000)
                }else{
                    showToast(data.message||'','error')
                    setTimeout(()=>{
                        window.location.reload()
                    },2000)
                }
            })
        }
        
        // Update Cart
        function updateCart() {
            updateCartTotals();
            updateCartCount();
            alert('Cart updated successfully!');
        }
        
    
        

    </script>
</body>
</html>