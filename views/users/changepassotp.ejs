<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8">
    <title>STAG MEN FASHION</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/assets/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link rel="stylesheet" href="/assets/css/maind134.css?v=3.4">
</head>

<body>
    <header class="header-area header-style-5">
        <div class="header-top header-top-ptb-1 d-none d-lg-block">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-3 col-lg-4"></div>
                    <div class="col-xl-6 col-lg-4 text-center">
                        <div id="news-flash" class="d-inline-block"></div>
                    </div>
                    <div class="col-xl-3 col-lg-4"></div>
                </div>
            </div>
        </div>
        <div class="header-bottom sticky-bar sticky-white-bg">
            <div class="container">
                <div class="header-wrap header-space-between position-relative">
                    <div class="logo logo-width-1">
                        <a href="/"><img src="/adminassets/imgs/theme/logo.png" alt="logo"></a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="main">
        <section class="pt-150 pb-150">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 m-auto">
                        <div class="row">
                            <div class="col-lg-1"></div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-1"></div>
                            <div class="col-lg-5">
                                <div class="login_wrap widget-taber-content p-30 background-white border-radius-10 mb-md-5 mb-lg-0 mb-sm-5">
                                    <div class="padding_eight_all bg-white">
                                        <div class="heading_s1">
                                            <h3 class="mb-30">OTP Verification</h3>
                                        </div>
                                        <form method="post" action="/changeEmail">
                                            <div class="form-group">
                                                
                                                    <input type="hidden" name="email" id="otpExpr" value="76">
                                                
                                                <input required type="password" name="otp" placeholder="Enter OTP" >
                                            </div>
                                            <div class="login_footer form-group">
                                                <p id="otpDisplay" style="font-weight: bold;"></p>
                                            </div>
                                            <% if (error) { %>
                                                <p style="font-size: 15px;color: red;"><%=error%></p>
                                            <% } %>
                                            <% if (message) { %>
                                                <p style="font-size: 15px;color: rgb(32, 136, 54);"><%=message%></p>
                                            <% } %>
                                            <div class="form-group d-flex justify-content-between">
                                                <button type="submit" class="btn btn-fill-out btn-block hover-up" name="login">Verify</button>
                                            </div>
                                            
                                               
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script>
        // Redirect if already logged in (assumes a "user" variable is globally available)
        if (typeof user !== "undefined" && user) {
            window.location.href = "/";
        }

        let otpExpr = parseInt(document.getElementById('otpExpr').value);
    const timerDisplay = document.getElementById('timer');
    const resendBtn = document.querySelector('.resend');

    function startTimer() {
        const interval = setInterval(() => {
            const now = Date.now();
            const remaining = Math.max(0, otpExpr - now);

            if (remaining === 0) {
                clearInterval(interval);
                timerDisplay.innerText = "OTP expired. Please resend.";
            } else {
                timerDisplay.innerText = `Time remaining: ${Math.ceil(remaining / 1000)} seconds`;
            }
        }, 1000);
    }

    startTimer();

    resendBtn.addEventListener('click', function (e) {
        e.preventDefault();
        fetch('/resendOTP', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        }).then(res => res.json())
          .then(data => {
            if (data.otpExpr) {
                otpExpr = data.otpExpr;
                startTimer();
            }
        }).catch(err => {
            console.error(err);
        });
    });
    </script>
</body>
</html>
