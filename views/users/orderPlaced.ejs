    <!-- Order Placed Content -->
    <section class="order-placed py-5 my-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="order-success text-center mb-5">
                        <div class="success-icon mb-4">
                            <i class="fas fa-check-circle text-success fa-5x"></i>
                        </div>
                        <h1 class="mb-3">Your Order Has Been Placed!</h1>
                        <p class="lead mb-4">Thank you for your purchase. Your order has been placed and is being processed.</p>
                        <div class="order-number mb-4">
                            <h5>Order Number: <span class="fw-bold">#ORD-2023-10512</span></h5>
                            <p>You will receive an order confirmation email with details of your order.</p>
                        </div>
                        <div class="estimated-delivery p-3 bg-light rounded mb-4">
                            <h5 class="mb-2">Estimated Delivery Date</h5>
                            <p class="mb-0 fw-bold">November 2 - November 5, 2023</p>
                        </div>
                    </div>
                    
                    <div class="order-details mb-5">
                        <h3 class="mb-4">Order Details</h3>
                        <div class="card mb-4">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Items in Your Order</h5>
                            </div>
                            <div class="card-body">
                                <div class="order-items">
                                    <!-- Order Item 1 -->
                                    <div class="order-item d-flex mb-3 pb-3 border-bottom">
                                        <div class="order-item-image me-3">
                                            <img src="images/product-1.jpg" alt="Premium Cotton Shirt" width="80" class="img-fluid">
                                        </div>
                                        <div class="order-item-details flex-grow-1">
                                            <h5 class="mb-1">Premium Cotton Shirt</h5>
                                            <p class="text-muted mb-1">Size: M | Color: White</p>
                                            <div class="d-flex justify-content-between">
                                                <span>Qty: 1</span>
                                                <span class="fw-bold">$89.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Order Item 2 -->
                                    <div class="order-item d-flex mb-3 pb-3 border-bottom">
                                        <div class="order-item-image me-3">
                                            <img src="images/product-3.jpg" alt="Wool Blend Sweater" width="80" class="img-fluid">
                                        </div>
                                        <div class="order-item-details flex-grow-1">
                                            <h5 class="mb-1">Wool Blend Sweater</h5>
                                            <p class="text-muted mb-1">Size: L | Color: Gray</p>
                                            <div class="d-flex justify-content-between">
                                                <span>Qty: 1</span>
                                                <span class="fw-bold">$102.00</span>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Order Item 3 -->
                                    <div class="order-item d-flex">
                                        <div class="order-item-image me-3">
                                            <img src="images/product-5.jpg" alt="Leather Bomber Jacket" width="80" class="img-fluid">
                                        </div>
                                        <div class="order-item-details flex-grow-1">
                                            <h5 class="mb-1">Leather Bomber Jacket</h5>
                                            <p class="text-muted mb-1">Size: M | Color: Brown</p>
                                            <div class="d-flex justify-content-between">
                                                <span>Qty: 1</span>
                                                <span class="fw-bold">$199.00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Shipping Address</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-1">John Doe</p>
                                        <p class="mb-1">123 Main Street</p>
                                        <p class="mb-1">Apt 4B</p>
                                        <p class="mb-1">New York, NY 10001</p>
                                        <p class="mb-1">United States</p>
                                        <p class="mb-0">+1 (555) 123-4567</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header bg-light">
                                        <h5 class="mb-0">Payment Information</h5>
                                    </div>
                                    <div class="card-body">
                                        <p class="mb-1"><strong>Payment Method:</strong> Credit Card</p>
                                        <p class="mb-1"><strong>Card Type:</strong> Visa</p>
                                        <p class="mb-3"><strong>Card Number:</strong> **** **** **** 1234</p>
                                        <p class="mb-1"><strong>Subtotal:</strong> $390.00</p>
                                        <p class="mb-1"><strong>Shipping:</strong> $10.00</p>
                                        <p class="mb-1"><strong>Discount:</strong> -$0.00</p>
                                        <p class="mb-0"><strong>Total:</strong> <span class="fw-bold">$400.00</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="order-actions text-center">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <a href="view-order.html" class="btn btn-outline-dark w-100">
                                    <i class="fas fa-eye me-2"></i> View Order
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a href="invoice.html" class="btn btn-outline-dark w-100">
                                    <i class="fas fa-file-invoice me-2"></i> View Invoice
                                </a>
                            </div>
                            <div class="col-md-4 mb-3">
                                <a href="index.html" class="btn btn-dark w-100">
                                    <i class="fas fa-shopping-bag me-2"></i> Continue Shopping
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- You May Also Like -->
