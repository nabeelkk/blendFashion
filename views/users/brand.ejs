    <script>
        // Brand Filter
        function filterBrands(letter) {
            const brandItems = document.querySelectorAll('.brand-item');
            const filterButtons = document.querySelectorAll('.brand-alphabet .btn');
            
            // Update active button
            filterButtons.forEach(button => {
                button.classList.remove('active');
                if (button.textContent === letter || (button.textContent === 'All' && letter === 'all')) {
                    button.classList.add('active');
                }
            });
            
            // Filter brands
            brandItems.forEach(item => {
                if (letter === 'all' || item.getAttribute('data-letter') === letter) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        }
        
        // Brand Search
        document.getElementById('brandSearch').addEventListener('keyup', function() {
            const searchValue = this.value.toLowerCase();
            const brandItems = document.querySelectorAll('.brand-item');
            
            brandItems.forEach(item => {
                const brandName = item.querySelector('.brand-title').textContent.toLowerCase();
                if (brandName.includes(searchValue)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Reset active button
            document.querySelectorAll('.brand-alphabet .btn').forEach(button => {
                button.classList.remove('active');
            });
            document.querySelector('.brand-alphabet .btn:first-child').classList.add('active');
        });
    </script>
