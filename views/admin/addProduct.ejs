    <script>
        let cropper;
        let croppedFiles = [];
        let currentFileIndex = 0;
        let filesToCrop = [];

        const imageInput = document.getElementById('imageInput');
        const imagePreviewContainer = document.getElementById('imagePreviewContainer');
        const form = document.getElementById('pdtform');

        // Initialize Select2 for better dropdowns
        $(document).ready(function() {
            $('#product_category').select2();
            $('#brand').select2();
        });

        // Image Handling
        imageInput.addEventListener('change', (event) => {
            imagePreviewContainer.innerHTML = '';
            croppedFiles = [];
            filesToCrop = Array.from(event.target.files);
            const errorImages = document.getElementById('error-images');

            // Validate image count and types
            if (filesToCrop.length > 3) {
                errorImages.textContent = 'You can upload a maximum of 3 images.';
                errorImages.style.display = 'block';
                imageInput.value = '';
                filesToCrop = [];
                return;
            }

            for (let file of filesToCrop) {
                if (!file.type.match('image/(jpeg|png|webp)')) {
                    errorImages.textContent = 'Only JPEG, PNG, or WebP images are allowed.';
                    errorImages.style.display = 'block';
                    imageInput.value = '';
                    filesToCrop = [];
                    return;
                }
                if (file.size > 5 * 1024 * 1024) {
                    errorImages.textContent = 'Each image must be less than 5MB.';
                    errorImages.style.display = 'block';
                    imageInput.value = '';
                    filesToCrop = [];
                    return;
                }
            }

            errorImages.style.display = 'none';
            if (filesToCrop.length > 0) {
                currentFileIndex = 0;
                cropNextImage();
            }
        });

        function cropNextImage() {
            if (currentFileIndex >= filesToCrop.length) {
                updateImageInput();
                return;
            }

            const file = filesToCrop[currentFileIndex];
            const reader = new FileReader();
            reader.onload = (e) => {
                const cropperImage = document.getElementById('cropper-image');
                cropperImage.src = e.target.result;
                document.getElementById('cropper-modal').style.display = 'flex';

                if (cropper) {
                    cropper.destroy();
                }
                cropper = new Cropper(cropperImage, {
                    aspectRatio: 1,
                    viewMode: 1,
                    autoCropArea: 0.8,
                    minCropBoxWidth: 200,
                    minCropBoxHeight: 200,
                    movable: true,
                    zoomable: true,
                    scalable: true,
                    background: false,
                });
            };
            reader.readAsDataURL(file);
        }

        function cropImage() {
            if (cropper) {
                cropper.getCroppedCanvas({
                    width: 600,
                    height: 600,
                    imageSmoothingQuality: 'high',
                }).toBlob((blob) => {
                    const croppedFile = new File([blob], `cropped-${currentFileIndex}.jpg`, { type: 'image/jpeg' });
                    croppedFiles.push(croppedFile);
                    currentFileIndex++;
                    closeCropper();
                    cropNextImage();
                }, 'image/jpeg', 0.9);
            }
        }

        function closeCropper() {
            document.getElementById('cropper-modal').style.display = 'none';
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }
        }

        function updateImageInput() {
            const dataTransfer = new DataTransfer();
            croppedFiles.forEach(file => dataTransfer.items.add(file));
            imageInput.files = dataTransfer.files;

            imagePreviewContainer.innerHTML = '';
            croppedFiles.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const img = document.createElement('img');
                    img.src = e.target.result;
                    img.alt = `Cropped Image ${index + 1}`;
                    img.style.cursor = 'pointer';
                    img.title = 'Click to re-crop';
                    img.onclick = () => reCropImage(index);
                    imagePreviewContainer.appendChild(img);
                };
                reader.readAsDataURL(file);
            });
        }

        function reCropImage(index) {
            currentFileIndex = index;
            filesToCrop = [croppedFiles[index]];
            croppedFiles.splice(index, 1);
            cropNextImage();
        }

        // Form Validation
        form.addEventListener('submit', (e) => {
            if (validateForm()) {
                form.submit();
            }
        });
        
        function validateForm() {
            let isValid = true;
            clearErrors();

            // Product Name
            const pdtName = document.getElementById('pdtname').value.trim();
            const nameRegex = /^[a-zA-Z0-9\s]{3,50}$/;
            if (!pdtName || !nameRegex.test(pdtName)) {
                showError('error-name', 'Product name is required and must be 3-50 characters (letters, numbers, spaces only).');
                isValid = false;
            }

            // Category
            const category = document.getElementById('product_category').value;
            if (!category) {
                showError('error-category', 'Please select a category.');
                isValid = false;
            }

            // Brand
            const brand = document.getElementById('brand').value;
            if (!brand) {
                showError('error-brand', 'Please select a brand.');
                isValid = false;
            }

            // Description
            const description = document.getElementById('pdtdes').value.trim();
            if (!description || description.length < 10 || description.length > 500) {
                showError('error-description', 'Description is required and must be 10-500 characters.');
                isValid = false;
            }

            // Size Validation
            const sizes = ['small', 'medium', 'large'];
            let atLeastOneSizeValid = false;

            sizes.forEach(size => {
                const capitalizedSize = size.charAt(0).toUpperCase() + size.slice(1);

                // Get elements and check for null
                const mrpElement = document.getElementById(`MaxPrice${capitalizedSize}`);
                const salesElement = document.getElementById(`SalesPrice${capitalizedSize}`);
                const stockElement = document.getElementById(`Stock${capitalizedSize}`);

                // Skip this size if any element is missing
                if (!mrpElement || !salesElement || !stockElement) {
                    console.error(`One or more elements for size ${size} are missing.`);
                    return;
                }

                const mrp = mrpElement.value;
                const sales = salesElement.value;
                const stock = stockElement.value;

                let sizeValid = true;

                if (mrp || sales || stock) {
                    // MRP
                    if (!mrp || isNaN(mrp) || mrp <= 0) {
                        showError(`error-mrp-${size}`, 'MRP must be a positive number.');
                        sizeValid = false;
                    }

                    // Sales Price
                    if (!sales || isNaN(sales) || sales <= 0 || sales>98) {
                        showError(`error-sales-${size}`, 'Offer must be a positive number and must be less than 99.');
                        sizeValid = false;
                    } 

                    // Stock
                    if (!stock || isNaN(stock) || stock < 0 || !Number.isInteger(parseFloat(stock))) {
                        showError(`error-stock-${size}`, 'Stock must be a non-negative integer.');
                        sizeValid = false;
                    }

                    if (!sizeValid) {
                        showError(`error-size-${size}`, `Please provide valid MRP, Offer, and Stock for ${capitalizedSize} size.`);
                        isValid = false;
                    } else {
                        atLeastOneSizeValid = true;
                    }
                }
            });

            if (!atLeastOneSizeValid) {
                sizes.forEach(size => {
                    showError(`error-size-${size}`, 'At least one size must have valid MRP, Offer, and Stock.');
                });
                isValid = false;
            }

            // Images
            if (croppedFiles.length === 0) {
                showError('error-images', 'Please upload at least one image.');
                isValid = false;
            }

            return isValid;
        }

        function showError(id, message) {
            const errorElement = document.getElementById(id);
            errorElement.textContent = message;
            errorElement.style.display = 'block';
        }

        
        
    </script>
