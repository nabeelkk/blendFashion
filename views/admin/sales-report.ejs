        const ws_data = [];
        const rows = document.querySelectorAll('#pdf tbody tr');

        // Add header
        const headers = ["Order ID", "Name", "Email", "Date", "Total Amount", "Discount", "Coupon", "Paid", "Method"];
        ws_data.push(headers);

        // Data rows
        rows.forEach(row => {
            const rowData = Array.from(row.cells).map(cell => cell.innerText);
            ws_data.push(rowData);
        });

        // Summary Calculations
        let totalOrders = rows.length, totalSales = 0, totalDiscount = 0, totalCoupon = 0, totalPaid = 0;

        rows.forEach(row => {
            totalSales += parseFloat(row.cells[4].innerText) || 0;
            totalDiscount += parseFloat(row.cells[5].innerText) || 0;
            totalCoupon += parseFloat(row.cells[6].innerText) || 0;
            totalPaid += parseFloat(row.cells[7].innerText) || 0;
        });

        // Empty row then summary rows
        ws_data.push([]);
        ws_data.push(["Summary"]);
        ws_data.push(["Total Orders", totalOrders]);
        ws_data.push(["Total Sales", totalSales.toFixed(2)]);
        ws_data.push(["Total Discount", totalDiscount.toFixed(2)]);
        ws_data.push(["Total Coupon Discount", totalCoupon.toFixed(2)]);
        ws_data.push(["Total Paid", totalPaid.toFixed(2)]);

        // Create worksheet and export
        const ws = XLSX.utils.aoa_to_sheet(ws_data);
        XLSX.utils.book_append_sheet(wb, ws, "Sales Report");
